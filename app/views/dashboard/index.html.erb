<h1>Dashboard</h1>

<h2>Patients</h2>
<table class="table">
  <thead>
  <tr>
    <th>Name</th>
  </tr>
  </thead>
  <tbody>
  <% @patients.each do |patient| %>
    <tr>
      <td><%= link_to full_name(patient), patient %></td>
      <td><%= link_to "Delete", patient_path(patient), method: :delete,
              data: { confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>Medications</h2>
<table class="table">
  <thead>
  <tr>
    <th>Name</th>
  </tr>
  </thead>
  <tbody>
  <% @medications.each do |medication| %>
      <tr>
        <td><%= link_to medication.name, medication %></td>
        <td><%= link_to "Delete", medication_path(medication), method: :delete,
                data: { confirm: "Are you sure?" } %><td>
      </tr>
  <% end %>
  </tbody>
</table>
